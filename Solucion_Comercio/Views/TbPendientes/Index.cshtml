@model IEnumerable<Solucion_Comercio.Models.TbPendiente>

@{
    ViewData["Title"] = "Pendientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Pendientes</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Pendiente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCompraNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCompraNavigation.IdCompra)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-danger" asp-route-id="@item.IdPendiente">Editar</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdPendiente">Detalles</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdPendiente">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
